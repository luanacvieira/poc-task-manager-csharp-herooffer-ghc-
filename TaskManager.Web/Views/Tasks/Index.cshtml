@model IEnumerable<TaskManager.Web.Models.TaskItem>

@{
    ViewData["Title"] = "Gerenciador de Tarefas";
}

<div class="container mt-4">
    <h1>Gerenciador de Tarefas</h1>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="mb-3">
        <a asp-action="Create" class="btn btn-primary">Nova Tarefa</a>
    </div>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Título</th>
                <th>Prioridade</th>
                <th>Categoria</th>
                <th>Data de Vencimento</th>
                <th>Atribuída a</th>
                <th>Status</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var task in Model)
            {
                <tr>
                    <td>@task.Title</td>
                    <td>
                        @switch (task.Priority)
                        {
                            case TaskManager.Web.Models.Priority.Urgent:
                                <span class="badge bg-danger">Urgente</span>
                                break;
                            case TaskManager.Web.Models.Priority.High:
                                <span class="badge bg-warning">Alta</span>
                                break;
                            case TaskManager.Web.Models.Priority.Medium:
                                <span class="badge bg-info">Média</span>
                                break;
                            case TaskManager.Web.Models.Priority.Low:
                                <span class="badge bg-secondary">Baixa</span>
                                break;
                        }
                    </td>
                    <td>@task.Category</td>
                    <td>@(task.DueDate?.ToString("dd/MM/yyyy") ?? "-")</td>
                    <td>@(task.AssignedTo ?? "-")</td>
                    <td>
                        @if (task.Completed)
                        {
                            <span class="badge bg-success">Concluída</span>
                        }
                        else
                        {
                            <span class="badge bg-warning">Pendente</span>
                        }
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@task.Id" class="btn btn-sm btn-outline-primary">Editar</a>
                        <a asp-action="Delete" asp-route-id="@task.Id" class="btn btn-sm btn-outline-danger">Excluir</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
